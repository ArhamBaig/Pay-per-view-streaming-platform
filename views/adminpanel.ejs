<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <script src="https://kit.fontawesome.com/131a015fe2.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js" integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script> <!-- Bootstrap CSS v5.2.1 -->

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/stylesheets/index.css">

</head>

<body>
  <div class="main-container d-flex">
    <div class="sidebar " id="side_nav">
      <div class="header-box px-3 pt-3 pb-4 d-flex justify-content-between logo">
       <a class="" href="/home" style="text-decoration: none;">
          <h1 class="fs-4 fw-bold">
            <% if(isAdmin) {%>
            <span class="fs-5 bg-white text-dark rounded shadow px-2 me-2">ADMIN</span>
            <% } %>
            <span  class="fs-4 fw-bold" style="color: #9a56ff;">LIVE</span><span class="fs-4 fw-bold">MG</span>
          </h1>
         </a>
        <button class="btn d-md-none d-block close-btn px-2 py-0"><i class="fa-solid fa-bars"></i></button>
      </div>
      <ul class="list-unstyled px-2">
        <li class="active"><a href="/admin/adminpanel" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-house" style="color: #9a56ff;"></i> Dashboard</a></li>
        <li><a href="/admin/manageaccounts" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-bars-progress" style="color: #9a56ff;"></i> Manage accounts</a></li>
      </ul>
    </div>
    <div class="content">
      <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
          <div class="d-flex justify-content-between">
            <button class="btn px-1 py-0 open-btn text-white d-md-none"><i class="fa-solid fa-bars-staggered"></i></button>
          </div>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse " id="navbarSupportedContent">

            <form class="d-flex mx-auto" role="search" action="/search" method="GET" onsubmit="search(event)">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search-input" name="query">
              <button class="btn btn-outline-success" id="search-btn" type="submit">Search</button>
            </form>
            <ul class="navbar-nav mb-2 mb-lg-0 justify-content-end">
              <li class="nav-item ">
                <a class="nav-link text-white d-flex mx-2" aria-current="page" href="/livedetails">
                  <i class="fa-solid fa-camera fa-xl my-auto mx-1" style="color:#9a56ff"></i>
                  <h4 class="fw-bold my-auto">
                    <span style="color:#9a56ff"> GO</span>LIVE
                  </h4>
                </a>
              </li>
              <li class="nav-item mx-1">
                <a class="nav-link text-white" aria-current="page" href="/upload"><i class="fa-solid fa-cloud-arrow-up fa-xl my-auto"></i></a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white my-auto" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa-solid fa-user fa-xl"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">

                  <li><a class="dropdown-item text-white" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a></li>
                </ul>
              </li>
              <!-- Logout Modal -->
              <form action="/logout" method="POST" id="logout-form">
                <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header bg-dark">
                        <h5 class="modal-title" id="logoutModalLabel">Logout Confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body bg-dark">
                        Are you sure you want to logout?
                      </div>
                      <div class="modal-footer bg-dark">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Logout</button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid">
        <div class="row mx-auto my-4">
          <div class="col">
            <div class="card bg-dark my-2">
              <div class="card-header">
                <h5 class="text-truncate fs-6">Number of users </h5>
              </div>
              <div class="card-body">
                <h5 class="text-truncate fw-bold fs-2"><%=usersCount %></h5>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card bg-dark my-2">
              <div class="card-header">
                <h5 class="text-truncate fs-6">Accounts created last 5 days</h5>

              </div>
              <div class="card-body">
                <h5 class="text-truncate fw-bold fs-2"><%=lastFiveUserCount %></h5>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card bg-dark my-2">
              <div class="card-header">
                <h5 class="text-truncate fs-6">Livestreamers</h5>
              </div>
              <div class="card-body">
                <h5 class="text-truncate fw-bold fs-2"><%= livestreamsCount%></h5>
              </div>
            </div>
          </div>
        </div>

        <div class="row mx-auto">
          <div class="col-md-6 col-sm-12">
            <div class="card bg-dark my-2 chart-card">
              <div class="card-header">
                Videos breakdown
              </div>
              <div class="card-body">
                <canvas id="video-status-chart"></canvas>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-sm-12">
            <input type="hidden" id="labels-data" data-labels="<%= JSON.stringify(labels) %>" data-data="<%= JSON.stringify(data) %>" data-user-data="<%= JSON.stringify(lastFiveUserData) %>">
            <div class="card bg-dark my-2 chart-card">
              <div class="card-header">
                Last 5 days traffic
              </div>
              <div class="card-body">
                <canvas id="video-count-chart"></canvas>
              </div>
            </div>

          </div>
        </div>
        <div class="row mx-auto">
          <!-- Last 5 Days Views Chart -->
          <div class="col-md-12 col-sm-12">
            <input type="hidden" id="last-5-days-views-data" data-dates="<%= JSON.stringify(labels) %>" data-views="<%= JSON.stringify(videoViewsData) %>">
            <div class="card bg-dark my-2 chart-card">
              <div class="card-header">
                Last 5 Days Views
              </div>
              <div class="card-body">
                <canvas id="last-5-days-views-chart"></canvas>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
  <script src="../public/javascripts/autocomplete.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const videoStatusChart = new Chart(document.getElementById("video-status-chart"), {
      type: 'pie',
      data: {
        labels: ['Paid', 'Free'],
        datasets: [{
          label: 'Video Status',
          backgroundColor: ['#6f42c1', '#fff'],
          data: [<%= paidVideosCount %>, <%= freeVideosCount %>]
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false
      }
    });
  </script>
  <script>
    const labelsDataInput = document.getElementById("labels-data");
    const labels = JSON.parse(labelsDataInput.getAttribute("data-labels"));
    const data = JSON.parse(labelsDataInput.getAttribute("data-data"));
    const userData = JSON.parse(labelsDataInput.getAttribute("data-user-data"));

    // Use the labels and data values to create the chart
    const lineChart = new Chart(document.getElementById("video-count-chart"), {
      type: "line",
      data: {
        labels: labels,
        datasets: [{
            data: data,
            label: "Videos",
            borderColor: "#6f42c1",
            fill: false,
          },
          {
            data: userData,
            label: "Users",
            borderColor: "#fff",
            fill: false,
          },
        ],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true,
              precision: 0,
              callback: function(value) {
                return Math.round(value);
              },
            },
          }, ],
        },
      },
    });
    // Last 5 Days Views Chart
    const last5DaysViewsDataInput = document.getElementById("last-5-days-views-data");
    const last5DaysDates = JSON.parse(last5DaysViewsDataInput.getAttribute("data-dates"));
    const last5DaysViews = JSON.parse(last5DaysViewsDataInput.getAttribute("data-views"));

    // Use the dates and views data to create the chart
    const last5DaysViewsChart = new Chart(document.getElementById("last-5-days-views-chart"), {
      type: "line",
      data: {
        labels: last5DaysDates,
        datasets: [{
          data: last5DaysViews,
          label: "Views",
          borderColor: "#6f42c1",
          fill: false,
        }],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true,
              precision: 0,
              callback: function(value) {
                return Math.round(value);
              },
            },
          }, ],
        },
      },
    });
  </script>


  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous"></script>
  <script src="../public/javascripts/style.js"></script>


</body>

</html>