    <div class="container-lg m-5 mx-auto">
      <div id="uploading-screen" style="display: none;">
        <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
        </div>
      </div>
      <form action="/upload" method="POST" enctype="multipart/form-data" class="row g-3" id="upload-form">

        <div class="col-md-6">
          <label for="video" class="form-label">Select Video:</label>
          <input type="file" name="video" accept="video/*" required class="form-control" id="video">
        </div>

        <div class="col-md-6">
          <label for="title" class="form-label">Enter Video Title:</label>
          <input type="text" name="title" required class="form-control" id="title">
        </div>

        <div class="col-md-12">
          <label for="description" class="form-label">Enter Video description:</label>
          <input type="text" name="description" required class="form-control" id="description">
        </div>

        <div class="col-md-6">
          <label for="status" class="form-label">Is the video paid?</label>
          <select class="form-select" name="status" id="status">
            <option value="free">Free</option>
            <option value="paid">Paid</option>
          </select>
        </div>

        <div class="col-md-6">
          <label for="amount" class="form-label">Amount (if paid):  $<span id="ethereum" name="ethereum"></span></label>
          <input type="hidden" id="ethereumValue" name="ethereumValue">
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" name="price" class="form-control" id="amount" step="0.01" min="0">
            
          </div>
        </div>
        <div class="col-md-12">
          <label for="walletAddress">Wallet Address:</label>
          <input type="text" id="wallet-address" name="address" class="form-control">
        </div>
        <div class="col-md-12">
          <label for="walletAddress">Secret Key:</label>
          <input type="text"  name="privatekey" class="form-control">
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Upload</button>
        </div>

      </form>
    </div>
</div>
</div>

  <script src="../public/javascripts/checkMetamask.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
  <script>
    let form = document.getElementById("upload-form");
    let statusField = document.getElementById("status");
    let amountField = document.getElementById("amount");
    let addressField = document.getElementById("wallet-address");

    // add an event listener to the form submission
    form.addEventListener("submit", function(event) {
      // if the video is paid and the amount or address field is empty, prevent the form submission and display an error message
      if (statusField.value === "paid" && (!amountField.value || !addressField.value)) {
        event.preventDefault();
        alert("Please enter the amount and wallet address for paid videos.");
      }
    });

    statusField.addEventListener("change", function() {
      amountField.disabled = (this.value === "free");
      addressField.disabled = (this.value === "free");
      if (this.value === "free") {
        amountField.value = "";
        addressField.value = "";
      }
      amountField.required = (this.value === "paid");
      addressField.required = (this.value === "paid");
    });

    // disable the amount and address fields on page load if the status is "free"
    if (statusField.value === "free") {
      amountField.disabled = true;
      addressField.disabled = true;
    }
    const uploadingScreen = document.getElementById('uploading-screen');

    form.addEventListener('submit', (event) => {
      event.preventDefault(); // prevent the form from submitting normally

      // show the uploading screen
      uploadingScreen.style.display = 'block';

      // send the POST request
      const xhr = new XMLHttpRequest();
      xhr.open('POST', '/upload');
      xhr.onreadystatechange = function() {
        if (xhr.readyState === XMLHttpRequest.DONE) {
          // hide the uploading screen
          uploadingScreen.style.display = 'none';
          
          // handle the response here
          if (xhr.status === 200) {
            console.log(xhr.responseText);
          } else {
            console.error('Error:', xhr.statusText);
          }
        }
      };
      xhr.send(new FormData(form));
    });

  </script>

  
  <script src="../public/javascripts/conversion.js"></script>
