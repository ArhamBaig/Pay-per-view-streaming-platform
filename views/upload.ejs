<script>
  $(document).ready(function() {
    const socket = io();

    socket.on('connect', () => {
      console.log('Connected to Socket.IO server');
    });

    socket.on('disconnect', () => {
      console.log('Disconnected from Socket.IO server');
    });
    socket.on("uploadStarted",()=>{
      $('.progress-label-payment').hide();
      $('.progress').hide();
      $('.progress-label-completed').hide();
    })
    socket.on('paymentStarted', ()=> {
      $('.progress-label-payment').show()
    })
    socket.on('paymentFinished', ()=> {
      $('.progress-label-payment').hide()
    })
    // Listen for the 'uploadProgress' event
    socket.on('uploadProgress', (percentage) => {
      // Show the progress bar if it was hidden
      $('.progress').show();
      // Update the progress bar
      const progressBar = $('.progress-bar');
      progressBar.css('width', percentage + '%').attr('aria-valuenow', percentage).text(percentage + '%');

      
    });

    // Listen for the 'uploadComplete' event
    socket.on('uploadComplete', () => {
      // Hide the progress bar
      $('.progress').hide();

      // Show the progress label
      $('.progress-label-completed').show();
    });
  });
</script>



  <script>
    let form = document.getElementById("upload-form");
    let statusField = document.getElementById("status");
    let amountField = document.getElementById("amount");
    let addressField = document.getElementById("wallet-address");
    let privatekeyField = document.getElementById("privatekey");

    // add an event listener to the form submission
    form.addEventListener("submit", function(event) {
      // if the video is paid and the amount or address field is empty, prevent the form submission and display an error message
      if (statusField.value === "paid" && (!amountField.value || !addressField.value || !privatekeyField.value)) {
        event.preventDefault();
      }
    });

    statusField.addEventListener("change", function() {
      amountField.disabled = (this.value === "free");
      addressField.disabled = (this.value === "free");
      privatekeyField.disabled = (this.value === "free");
      if (this.value === "free") {
        amountField.value = "";
        addressField.value = "";
        privatekeyField.value = "";
      }
      amountField.required = (this.value === "paid");
      addressField.required = (this.value === "paid");
      privatekeyField.required = (this.value === "paid");
    });

    // disable the amount and address fields on page load if the status is "free"
    if (statusField.value === "free") {
      amountField.disabled = true;
      addressField.disabled = true;
      privatekeyField.disabled = true;
    }    


  </script>

  
