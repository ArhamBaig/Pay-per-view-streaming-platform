<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <script src="https://kit.fontawesome.com/131a015fe2.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js" integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script> <!-- Bootstrap CSS v5.2.1 -->

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/stylesheets/index.css">

</head>

<body>
  <div class="main-container d-flex">
    <div class="sidebar" id="side_nav">
      <div class="header-box px-3 pt-3 pb-4 d-flex justify-content-between">
        <h1 class="fs-4 fw-bold"><span class="bg-white text-dark rounded shadow px-2 me-2">LM</span><span style="color: #9a56ff;">LIVE</span>MG</h1>
        <button class="btn d-md-none d-block close-btn px-2 py-0"><i class="fa-solid fa-bars"></i></button>
      </div>
      <ul class="list-unstyled px-2">
        <li><a href="/home" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-house" style="color: #9a56ff;"></i> Home</a></li>
        <li><a href="/following" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-heart" style="color: #9a56ff;"></i> Following</a></li>
        <li><a href="/freevideos" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-gift" style="color: #9a56ff;"></i> Free Videos</a></li>
        <li><a href="/exclusive" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-sack-dollar" style="color: #9a56ff;"></i> Exclusive Videos</a></li>
        <li><a href="/ownedvideos" class="text-decoration-none px-3 py-2 d-block"><i class="fa-solid fa-handshake" style="color: #9a56ff;"></i> Owned Videos</a></li>
      </ul>
    </div>
    <div class="content">
      <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-fluid">
          <div class="d-flex justify-content-between">
            <button class="btn px-1 py-0 open-btn text-white d-md-none"><i class="fa-solid fa-bars-staggered"></i></button>
          </div>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse " id="navbarSupportedContent">

            <form class="d-flex mx-auto" role="search" action="/search" method="GET" onsubmit="search(event)">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search-input" name="query">
              <button class="btn btn-outline-success" id="search-btn" type="submit">Search</button>
            </form>
            <ul class="navbar-nav mb-2 mb-lg-0 justify-content-end">
              <li class="nav-item ">
                <a class="nav-link text-white d-flex mx-2" aria-current="page" href="/livedetails">
                  <i class="fa-solid fa-camera fa-xl my-auto mx-1" style="color:#9a56ff"></i>
                  <h4 class="fw-bold my-auto">
                    <span style="color:#9a56ff"> GO</span>LIVE
                  </h4>
                </a>
              </li>
              <li class="nav-item mx-1">
                <a class="nav-link text-white" aria-current="page" href="/upload"><i class="fa-solid fa-cloud-arrow-up fa-xl my-auto"></i></a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-white my-auto" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <i class="fa-solid fa-user fa-xl"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
                  <li><a class="dropdown-item" href="/profile/<%= username %>">Show Profile</a></li>
                  <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">Logout</a></li>
                </ul>
              </li>
              <!-- Logout Modal -->
              <form action="/logout" method="POST" id="logout-form">
                <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header bg-dark">
                        <h5 class="modal-title" id="logoutModalLabel">Logout Confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body bg-dark">
                        Are you sure you want to logout?
                      </div>
                      <div class="modal-footer bg-dark">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Logout</button>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </ul>
          </div>
        </div>
      </nav>

      <div class="container-fluid mt-5 d-flex flex-wrap">

        <div class="col-lg-4 col-md-8  col-sm-12 ">
          <div class="row m-2">
            <% if (profilePicExist) {%>
            <img src=<%=target_user.profilepic_url%> alt="" class="rounded-circle mx-auto d-block" style="width: 17rem; height: 15rem;">
            <% }else{ %>
            <img src="../public/images/default-pp.png" alt="" class="rounded-circle mx-auto d-block" style="width: 17rem; height: 15rem;">
            <% } %>
          </div>
          <% if (profileOwner) { %>
          <div class="row  align-items-center justify-content-center">
            <button class="btn btn-primary col-auto" data-bs-toggle="modal" data-bs-target="#uploadppModal">upload profile picture</button>
          </div>
          <form action="/uploadprofilepic" method="POST" enctype="multipart/form-data">
            <div class="modal fade" id="uploadppModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header bg-dark">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Upload Profile Picture</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body bg-dark ">
                    <input type="file" accept="image/png" name="profile_pic" required>
                  </div>
                  <div class="modal-footer bg-dark">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">upload</button>
                  </div>
                </div>
              </div>
            </div>
          </form>
          <% } %>
          <div class="row">
            <h2 class="text-white text-center fw-bolder"><%= target_username %></h2>
          </div>
          <% if(!profileOwner){ %>
          <div class="row">
            <% if (!isFollowed) {%>
            <form action="/follow/<%=target_username%>" method="POST" id="follow-form">
              <div class="row align-items-center justify-content-center">
              <button type="submit" class="btn btn-primary col-auto">Follow</button>
            </div>
            </form>
            <% } else {%>
            <form action="/unfollow/<%=target_username%>" method="POST" id="unfollow-form">
              <div class="row align-items-center justify-content-center">
              <button type="submit" class="btn btn-secondary col-auto">unfollow</button>
            </div>
            </form>
            <% } %>
          </div>
          <% } %>
          <div class="row">
            <div class="col">
              <div class="row text-center">
                <h5 class="fw-bold text-white">Followers</h5>
              </div>
              <div class="row text-center ">
                <p class="text-white"><%=followersCount%></p>
              </div>
            </div>
            <div class="col">
              <div class="row text-center text-white">
                <h5 class="fw-bold">Videos</h5>
              </div>
              <div class="row text-center text-white">
                <p><%= videos.length %></p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-8">
          <div class="container-fluid  d-flex flex-wrap">
            <% videos.forEach(video=> { %>
            <div class="video ms-3">
              <a href="/play/<%= video.video_id %>">
                <div class="card bg-dark mt-4" style="width: 18rem;">
                  <img class="card-img-top" src="<%= video.thumbnail_url %>" alt="Thumbnail">
                  <div class="card-body h-100">
                    <h5 class="card-title fw-bold text-truncate text-white"><%= video.video_title %></h5>
                    <div class="row">
                      <div class="col">
                        <p class="card-text text-muted text-start text-white"><%= video.username %></p>
                      </div>
                      <div class="col d-flex">
                        <p class="card-text text-muted text-white text-end mt-1 text-truncate">• <%= video.elapsed %></p>
                      </div>
                      </div>
                      </div>
                      
                      
              </a>
            

            <% if(profileOwner){ %>
            <button href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
            <form method="POST" action="/profile/<%= video.video_id %>">
              <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header bg-dark">
                      <h5 class="modal-title" id="logoutModalLabel">Delete Confirmation</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body bg-dark">
                      Are you sure you want to delete?
                    </div>
                    <div class="modal-footer bg-dark">
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
            <% } %>
          </div>
          </div>
          <% }) %>
        </div>
        </div>
      </div>
    </div>
  </div>

  </div>

  </div>
  </div>
  <script src="../public/javascripts/autocomplete.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>

<script>
  $(document).on('submit', '#follow-form, #unfollow-form', function(event) {
    event.preventDefault();
    var form = $(this);
    $.ajax({
      method: form.attr('method'),
      url: form.attr('action'),
      data: form.serialize(),
      success: function(data) {
        // update the UI
        if (form.attr('id') === 'follow-form') {
          $('#follow-form').replaceWith('<form action="/unfollow/<%=target_username%>" method="POST" id="unfollow-form"><div class="row align-items-center justify-content-center"><button type="submit" class="btn btn-secondary col-auto">unfollow</button></div></form>');
        } else {
          $('#unfollow-form').replaceWith('<form action="/follow/<%=target_username%>" method="POST" id="follow-form"><div class="row align-items-center justify-content-center"><button type="submit" class="btn btn-primary col-auto">Follow</button></div></form>');
        }
      },
      error: function(jqXHR, textStatus, errorThrown) {
        // display an error message
        alert('Error: ' + textStatus + ' ' + errorThrown);
      }
    });
  });
</script>

</body>

</html>