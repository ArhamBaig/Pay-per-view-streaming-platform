  <script>
function copyUrl() {
  var copyText = document.getElementById("streamUrl");
  copyText.select();
  document.execCommand("copy");
}
function copyKey() {
    var copyText = document.getElementById("streamKey");
    copyText.select();
    document.execCommand("copy");
}
  </script>
